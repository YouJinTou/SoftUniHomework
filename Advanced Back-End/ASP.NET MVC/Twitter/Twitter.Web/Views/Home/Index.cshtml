<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Twitter";
}

<section id="tweets-container">
    @{
        if (!this.User.Identity.IsAuthenticated)
        {
            Html.RenderPartial("_Index");
        }
        else
        {
            Html.RenderPartial("_PostTweet");
            Html.RenderPartial("_Index");
        }
    }
</section>

