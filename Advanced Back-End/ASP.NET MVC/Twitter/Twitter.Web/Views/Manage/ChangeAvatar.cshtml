@model Twitter.Web.Models.ViewModels.ChangeAvatarBindingModel
@{
    ViewBag.Title = "Change Profile Photo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangeAvatar", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        <h4>File upload coming soon</h4>
        <label class="col-md-2 control-label">Photo URL</label>
        <div class="col-md-10">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.EditorFor(m => m.PictureUrl, new { @class = "form-control" })
        </div></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change avatar" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}